#include <stdio.h>

int main() {
    int num = 10;      
    int *ptr;         

    ptr = &num;         
    
    printf("Value of num: %d\n", num);       
    printf("Value of num using pointer: %d\n", *ptr);
   *ptr = 20;
    printf("Modified value of num: %d\n", num); 
    printf("Modified value of num using pointer: %d\n", *ptr);
    return 0;
}

output:

Value of num: 10
Value of num using pointer: 10
Modified value of num: 20
Modified value of num using pointer: 20

